<h2>Create a new vacation</h2>
<section>
  <div class="row">
  <%= form_tag '/vacations' do %>
    <div class="accomondations col-xs-6 col-md-4">
      <div>
        <%= label_tag :accomondations, "Living Quarters:" %>
      </div>
      <div>
        <%= text_field_tag :accomondations %> 
      </div>
      <div>
        <%= label_tag :address, "Address:" %>
      </div>
      <div>
        <%= text_field_tag :address %> 
      </div>
    </div>

    <div class="vacation_name col-xs-6 col-md-4">
      <div>
        <%= label_tag :vacation_name, "Vacation Name:" %>
      </div>
      <div>
        <%= text_field_tag :vacation_name %> 
      </div>
      <div>
        <%= label_tag :city, "City:" %>
        </div>
        <div>
        <%= text_field_tag :city %>
      </div>
      <p>how do you plan on getting around while on vacation</p>
      <!-- The below code will need to be enum, so I think I have to change it to arive_by to match the table -->
      <div>
        <%= label_tag :car_rental, "Car rental" %>
        </div>
        <div>
        <%= check_box_tag :car_rental %>
      </div>
      <div>
        <%= label_tag :bus_train, "Bus/Train" %>
        </div>
        <div>
        <%= check_box_tag :bus_train %>
      </div>
      <div>
        <%= label_tag :walking, "walking" %>
        </div>
        <div>
        <%= check_box_tag :walking %>
      </div>
      <hr>
      <div><%= submit_tag "Let's Go!" %></div>
    </div>

    <div class="arive_by col-xs-6 col-md-4">
      <div>
        <%= label_tag :arive_by, "arive_by:" %>
        </div>
        <div>
        <%= text_field_tag :arive_by %>
      </div>
    </div>

    <% end %>
  </div>
</section>





